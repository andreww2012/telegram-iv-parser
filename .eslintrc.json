{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "indent": ["error", 2],
        "linebreak-style": ["error", "windows"]
    }
}
